<h1>Inbox</h1>

<table class="table table-striped">
  <thead class="thead thead-default">
    <tr>
      <th>Sender</th>
      <th>Subject</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |msg| %>
      <tr>
        <td><strong><%= msg.sender.name %></strong></td>
        <td><strong><%= link_to msg.subject, message_path(msg.id) %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>
