<%= form_for @message do |f| %>
	<%= f.hidden_field :sender_id, class: 'form-control', value: current_user.id %>
  <div class="form-group">
	   <%= f.label :recipient_id, class: 'form-control-label' %>
	   <%= f.collection_select :recipient_id, @friends, :id, :name, {:prompt => 'select recepient ...'},{:class => 'form-control'} %>
  </div>
  <div class="form-group">
     <%= f.label :subject, class: 'form-control-label' %>
     <%= f.text_area :subject, class: 'form-control' %>
	   <%= f.label :body, class: 'form-control-label' %>
	   <%= f.text_area :body, class: 'form-control' %>
    </div>
  <%= f.submit 'Send', class: 'btn btn-primary' %>
<% end %>
